@using Glimpse.Services
@model List<Glimpse.Models.Screenshot>
@{
    ViewData["Title"] = "Search";
    var progress = ViewBag.Progress as ScanProgressService;
    var query = ViewBag.SearchQuery as string;
}

@if (progress?.IsScanning == true)
{
    <div id="progress" class="mb-8 p-4 rounded-2xl bg-gradient-to-r from-violet-500/10 to-fuchsia-500/10 border border-violet-500/20">
        <div class="flex items-center justify-between mb-3">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-violet-500/20 flex items-center justify-center">
                    <svg class="w-4 h-4 text-violet-400 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-medium text-dark-100">Scanning screenshots</p>
                    <p class="text-xs text-dark-500" id="progress-file">@progress.CurrentFile</p>
                </div>
            </div>
            <div class="text-right">
                <p class="text-sm font-semibold text-dark-100" id="progress-stats">@progress.ProcessedFiles / @progress.TotalFiles</p>
                <p class="text-xs text-dark-500"><span id="progress-percent">@progress.PercentComplete</span>% complete</p>
            </div>
        </div>
        <div class="h-2 bg-dark-800 rounded-full overflow-hidden">
            <div id="progress-bar" class="h-full bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-full transition-all duration-500" style="width: @progress.PercentComplete%"></div>
        </div>
    </div>
}

<!-- Search Section -->
<div class="mb-8">
    <form method="get" action="/" class="relative">
        <div class="relative group">
            <div class="absolute inset-0 bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-2xl blur-xl opacity-20 group-focus-within:opacity-30 transition-opacity"></div>
            <div class="relative flex gap-3">
                <div class="flex-1 relative">
                    <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-dark-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <input type="text" 
                           name="q" 
                           value="@query" 
                           placeholder="Search your screenshots..." 
                           class="w-full pl-12 pr-12 py-4 bg-dark-900 border border-dark-700 rounded-2xl text-dark-100 placeholder-dark-500 focus:outline-none focus:border-violet-500/50 focus:ring-2 focus:ring-violet-500/20 transition-all"
                           id="search-input">
                    @if (!string.IsNullOrEmpty(query))
                    {
                        <a href="/" class="absolute right-4 top-1/2 -translate-y-1/2 w-6 h-6 flex items-center justify-center text-dark-500 hover:text-dark-300 transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </a>
                    }
                </div>
                <button type="submit" class="px-6 py-4 bg-gradient-to-r from-violet-500 to-fuchsia-500 hover:from-violet-600 hover:to-fuchsia-600 text-white font-medium rounded-2xl shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all">
                    Search
                </button>
            </div>
        </div>
    </form>
</div>

@if (Model.Count == 0)
{
    <div class="flex flex-col items-center justify-center py-20 text-center">
        <div class="w-20 h-20 rounded-3xl bg-dark-800 flex items-center justify-center mb-6">
            @if (string.IsNullOrEmpty(query))
            {
                <svg class="w-10 h-10 text-dark-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            }
            else
            {
                <svg class="w-10 h-10 text-dark-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            }
        </div>
        @if (string.IsNullOrEmpty(query))
        {
            <h2 class="text-xl font-semibold text-dark-200 mb-2">No screenshots yet</h2>
            <p class="text-dark-500 max-w-md">Screenshots will appear here once they're processed. New screenshots are automatically detected and indexed.</p>
        }
        else
        {
            <h2 class="text-xl font-semibold text-dark-200 mb-2">No results found</h2>
            <p class="text-dark-500 max-w-md">Try different keywords or check the spelling of your search term.</p>
        }
    </div>
}
else
{
    <div id="screenshots-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @await Html.PartialAsync("_ScreenshotGrid", Model)
    </div>
    
    @if ((bool)ViewBag.HasMore)
    {
        <div id="load-more" class="flex justify-center py-8">
            <div class="flex items-center gap-2 text-dark-500">
                <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Loading more...</span>
            </div>
        </div>
    }
}

@if (progress?.IsScanning == true)
{
    <script>
        let lastProcessed = 0;
        setInterval(() => {
            fetch('/api/progress')
                .then(r => r.json())
                .then(p => {
                    if (!p.isScanning) { location.reload(); return; }
                    document.getElementById('progress-stats').textContent = `${p.processedFiles} / ${p.totalFiles}`;
                    document.getElementById('progress-percent').textContent = p.percentComplete;
                    document.getElementById('progress-bar').style.width = `${p.percentComplete}%`;
                    document.getElementById('progress-file').textContent = p.currentFile || '';
                    
                    // Refresh grid when new images are processed
                    if (p.processedFiles > lastProcessed) {
                        lastProcessed = p.processedFiles;
                        refreshGrid();
                    }
                });
        }, 2000);
        
        function refreshGrid() {
            const query = '@(query ?? "")';
            const url = query ? `/?q=${encodeURIComponent(query)}` : '/';
            fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
                .then(r => r.text())
                .then(html => {
                    const grid = document.getElementById('screenshots-grid');
                    if (grid && html.trim()) {
                        grid.innerHTML = html;
                    }
                });
        }
    </script>
}

<script>
    // Focus search input and move cursor to end
    document.addEventListener('DOMContentLoaded', function() {
        const input = document.getElementById('search-input');
        if (input) {
            input.focus();
            input.setSelectionRange(input.value.length, input.value.length);
            
            // Debounced live search
            let debounceTimer;
            input.addEventListener('input', function() {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    const url = new URL(window.location);
                    if (input.value) {
                        url.searchParams.set('q', input.value);
                    } else {
                        url.searchParams.delete('q');
                    }
                    url.searchParams.delete('page');
                    window.location.href = url.toString();
                }, 500);
            });
        }

        // Infinite scroll
        let currentPage = @((int)ViewBag.Page);
        let isLoading = false;
        let hasMore = @((bool)ViewBag.HasMore ? "true" : "false");
        const grid = document.getElementById('screenshots-grid');
        const loadMore = document.getElementById('load-more');
        const query = '@(query ?? "")';

        function loadNextPage() {
            if (isLoading || !hasMore) return;
            isLoading = true;
            currentPage++;
            
            const url = new URL(window.location);
            url.searchParams.set('page', currentPage);
            
            fetch(url.toString(), {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(r => r.text())
            .then(html => {
                if (html.trim()) {
                    grid.insertAdjacentHTML('beforeend', html);
                    // Check if we got a full page
                    const tempDiv = document.createElement('div');
                    tempDiv.innerHTML = html;
                    hasMore = tempDiv.children.length >= 24;
                } else {
                    hasMore = false;
                }
                if (!hasMore && loadMore) {
                    loadMore.remove();
                }
                isLoading = false;
            })
            .catch(() => {
                isLoading = false;
            });
        }

        // Intersection Observer for infinite scroll
        if (loadMore) {
            const observer = new IntersectionObserver((entries) => {
                if (entries[0].isIntersecting) {
                    loadNextPage();
                }
            }, { rootMargin: '200px' });
            observer.observe(loadMore);
        }
    });
</script>
