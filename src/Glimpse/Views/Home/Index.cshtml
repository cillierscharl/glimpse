@using Glimpse.Services
@model List<Glimpse.Models.Screenshot>
@{
    ViewData["Title"] = "Search";
    var progress = ViewBag.Progress as ScanProgressService;
    var query = ViewBag.SearchQuery as string;
}

@if (progress?.OllamaStatus != null)
{
    <div id="ollama-status" class="mb-8 p-4 rounded-2xl bg-gradient-to-r from-amber-500/10 to-orange-500/10 border border-amber-500/20">
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-amber-500/20 flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-400 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </div>
            <div>
                <p class="text-sm font-medium text-dark-100">Setting up OCR</p>
                <p class="text-xs text-dark-500" id="ollama-status-text">@progress.OllamaStatus</p>
            </div>
        </div>
    </div>
}
else if (progress?.IsScanning == true)
{
    <div id="progress" class="mb-8 p-4 rounded-2xl bg-gradient-to-r from-violet-500/10 to-fuchsia-500/10 border border-violet-500/20">
        <div class="flex items-center justify-between mb-3">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-violet-500/20 flex items-center justify-center">
                    <svg class="w-4 h-4 text-violet-400 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-medium text-dark-100">Scanning screenshots</p>
                    <p class="text-xs text-dark-500" id="progress-file">@progress.CurrentFile</p>
                </div>
            </div>
            <div class="text-right">
                <p class="text-sm font-semibold text-dark-100"><span id="progress-indexed">@(progress.AlreadyIndexed + progress.ProcessedFiles)</span> / <span id="progress-total">@progress.TotalFiles</span> indexed</p>
                <p class="text-xs text-dark-500"><span id="progress-percent">@progress.PercentComplete</span>% complete</p>
            </div>
        </div>
        <div class="h-2 bg-dark-800 rounded-full overflow-hidden">
            <div id="progress-bar" class="h-full bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-full transition-all duration-500" style="width: @progress.PercentComplete%"></div>
        </div>
    </div>
}

<!-- Search Section -->
<div class="mb-8">
    <form method="get" action="/" class="relative">
        <div class="relative group">
            <div class="absolute inset-0 bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-2xl blur-xl opacity-20 group-focus-within:opacity-30 transition-opacity"></div>
            <div class="relative flex gap-3">
                <div class="flex-1 relative">
                    <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-dark-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <input type="text" 
                           name="q" 
                           value="@query" 
                           placeholder="Search your screenshots..." 
                           class="w-full pl-12 pr-12 py-4 bg-dark-900 border border-dark-700 rounded-2xl text-dark-100 placeholder-dark-500 focus:outline-none focus:bg-dark-900 focus:border-violet-500/50 focus:ring-2 focus:ring-violet-500/20 transition-colors"
                           id="search-input">
                    @if (!string.IsNullOrEmpty(query))
                    {
                        <a href="/" class="absolute right-4 top-1/2 -translate-y-1/2 w-6 h-6 flex items-center justify-center text-dark-500 hover:text-dark-300 transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </a>
                    }
                </div>
                <button type="submit" class="px-6 py-4 bg-gradient-to-r from-violet-500 to-fuchsia-500 hover:from-violet-600 hover:to-fuchsia-600 text-white font-medium rounded-2xl shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transition-all">
                    Search
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Tag Filters -->
@{
    var allTags = ViewBag.AllTags as List<Glimpse.Models.Tag>;
    var currentTag = ViewBag.CurrentTag as string;
}
@if (allTags?.Count > 0)
{
    <div class="mb-6 flex flex-wrap items-center gap-2">
        <span class="text-sm text-dark-500 mr-2">Tags:</span>
        @foreach (var tag in allTags)
        {
            var isActive = tag.Name == currentTag;
            var tagUrl = $"/?tag={tag.Name}" + (query != null ? $"&q={query}" : "");
            <a href="@tagUrl"
               class="px-3 py-1.5 text-sm rounded-lg transition-colors @(isActive ? "bg-violet-500 text-white" : "bg-dark-800 text-dark-400 hover:bg-dark-700")">
                @tag.Name
            </a>
        }
        @if (currentTag != null)
        {
            var clearUrl = "/" + (query != null ? $"?q={query}" : "");
            <a href="@clearUrl"
               class="px-3 py-1.5 text-sm text-dark-500 hover:text-dark-300 transition-colors">
                Clear filter
            </a>
        }
    </div>
}

<!-- Stats for nerds -->
<div class="mt-12 mb-12 border-t border-dark-800 pt-6">
    <button onclick="toggleStats()" class="flex items-center gap-2 text-sm text-dark-500 hover:text-dark-400 transition-colors">
        <span>Stats for nerds</span>
        <svg id="stats-arrow" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
    </button>
    <div id="stats-content" style="display: none;" class="mt-4">
        <div id="gpu-stats" style="display: none;" class="bg-dark-900 rounded-xl border border-dark-800 p-4 font-mono text-xs">
            <div class="grid grid-cols-2 gap-x-8 gap-y-2 text-dark-400">
                <div>GPU</div><div id="gpu-name" class="text-dark-300">-</div>
                <div>Temperature</div><div id="gpu-temp" class="text-dark-300">-</div>
                <div>Power</div><div id="gpu-power" class="text-dark-300">-</div>
                <div>VRAM</div><div id="gpu-mem" class="text-dark-300">-</div>
                <div>Utilization</div><div id="gpu-util" class="text-dark-300">-</div>
            </div>
        </div>
        <p id="gpu-unavailable" class="text-xs text-dark-600 mt-2" style="display: none;">GPU stats unavailable</p>
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="flex flex-col items-center justify-center py-20 text-center">
        <div class="w-20 h-20 rounded-3xl bg-dark-800 flex items-center justify-center mb-6">
            @if (string.IsNullOrEmpty(query))
            {
                <svg class="w-10 h-10 text-dark-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            }
            else
            {
                <svg class="w-10 h-10 text-dark-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            }
        </div>
        @if (string.IsNullOrEmpty(query))
        {
            <h2 class="text-xl font-semibold text-dark-200 mb-2">No screenshots yet</h2>
            <p class="text-dark-500 max-w-md">Screenshots will appear here once they're processed. New screenshots are automatically detected and indexed.</p>
        }
        else
        {
            <h2 class="text-xl font-semibold text-dark-200 mb-2">No results found</h2>
            <p class="text-dark-500 max-w-md">Try different keywords or check the spelling of your search term.</p>
        }
    </div>
}
else
{
    <div id="screenshots-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @await Html.PartialAsync("_ScreenshotGrid", Model)
    </div>
}

<script>
    // Index page: add progress bar updates and grid refresh to shared SSE connection
    onGlimpseEvent('progress', (e) => {
        const p = JSON.parse(e.data);

        // Handle Ollama status
        const ollamaEl = document.getElementById('ollama-status');
        const progressEl = document.getElementById('progress');

        if (p.OllamaStatus) {
            const statusText = document.getElementById('ollama-status-text');
            if (statusText) statusText.textContent = p.OllamaStatus;
            if (progressEl) progressEl.style.display = 'none';
            return;
        } else if (ollamaEl) {
            ollamaEl.remove();
            location.reload(); // Reload to show scan progress properly
            return;
        }

        if (!p.IsScanning) {
            progressEl?.remove();
            return;
        }

        document.getElementById('progress-indexed').textContent = p.AlreadyIndexed + p.ProcessedFiles;
        document.getElementById('progress-total').textContent = p.TotalFiles;
        document.getElementById('progress-percent').textContent = p.PercentComplete;
        document.getElementById('progress-bar').style.width = `${p.PercentComplete}%`;
        document.getElementById('progress-file').textContent = p.CurrentFile || '';
    });

    // Handle new screenshot detected - add card to grid immediately
    onGlimpseEvent('screenshot-detected', (e) => {
        const s = JSON.parse(e.data);
        const grid = document.getElementById('screenshots-grid');

        // If no grid exists (empty state shown), reload to get the grid
        if (!grid) {
            location.reload();
            return;
        }

        // Fetch and prepend the new card
        fetch(`/?partial=card&id=${s.Id}`, { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
            .then(r => r.text())
            .then(html => {
                if (html.trim()) {
                    grid.insertAdjacentHTML('afterbegin', html);
                }
            });
    });

    // Handle screenshot status change - update specific card in place
    onGlimpseEvent('screenshot-status', (e) => {
        const s = JSON.parse(e.data);
        const card = document.getElementById(`screenshot-card-${s.Id}`);
        if (!card) return;

        // Fetch updated card HTML and replace
        fetch(`/?partial=card&id=${s.Id}`, { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
            .then(r => r.text())
            .then(html => {
                if (html.trim()) {
                    card.outerHTML = html;
                }
            });
    });
</script>

<script>
    // Focus search input and move cursor to end
    document.addEventListener('DOMContentLoaded', function() {
        const input = document.getElementById('search-input');
        if (input) {
            input.focus();
            input.setSelectionRange(input.value.length, input.value.length);

            // Debounced live search
            let debounceTimer;
            input.addEventListener('input', function() {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    const url = new URL(window.location);
                    if (input.value) {
                        url.searchParams.set('q', input.value);
                    } else {
                        url.searchParams.delete('q');
                    }
                    window.location.href = url.toString();
                }, 500);
            });

            // Escape key clears search and reloads (only if there's something to clear)
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    e.preventDefault();
                    e.stopPropagation();
                    clearTimeout(debounceTimer);
                    const hasQuery = input.value || new URLSearchParams(window.location.search).has('q');
                    if (hasQuery) {
                        window.location.href = '/';
                    }
                    // If no query, do nothing (don't blur, don't reload)
                }
            });
        }
    });

    // GPU stats
    async function loadGpuStats() {
        try {
            const r = await fetch('/api/gpu');
            if (!r.ok) return;
            const g = await r.json();
            document.getElementById('gpu-name').textContent = g.name;
            document.getElementById('gpu-temp').textContent = g.temperatureC + 'Â°C';
            document.getElementById('gpu-power').textContent = g.powerDrawW.toFixed(0) + 'W / ' + g.powerLimitW.toFixed(0) + 'W';
            document.getElementById('gpu-mem').textContent = g.memoryUsedMB + ' / ' + g.memoryTotalMB + ' MB';
            document.getElementById('gpu-util').textContent = g.utilizationPercent + '%';
            document.getElementById('gpu-stats').style.display = 'block';
        } catch {}
    }

    function toggleStats() {
        const content = document.getElementById('stats-content');
        const arrow = document.getElementById('stats-arrow');
        if (content.style.display === 'none') {
            content.style.display = 'block';
            arrow.style.transform = 'rotate(180deg)';
            loadGpuStats();
        } else {
            content.style.display = 'none';
            arrow.style.transform = '';
        }
    }
</script>

